FROM {{ item.image }}

RUN apt-get update && \
    apt-get install --yes \
      apt-transport-https \
      gnupg \
      software-properties-common \
      openjdk-8-jdk \
      rsync \
      ca-certificates \
      openssl \
      unzip \
      curl

RUN wget -qO - https://staging-confluent-packages.s3.us-west-2.amazonaws.com/deb/6.0/archive.key | sudo apt-key add - && \
   add-apt-repository "deb [arch=amd64] https://staging-confluent-packages.s3.us-west-2.amazonaws.com/deb/6.0 stable main" && \
   apt-get update

RUN apt-get install --yes \
     confluent-common=6.0.5-1 \
     confluent-hub-client=6.0.5-1 \
     confluent-rebalancer=6.0.5-1 \
     confluent-rest-utils=6.0.5-1 \
     confluent-metadata-service=6.0.5-1 \
     confluent-server=6.0.5-1 \
     confluent-kafka-connect-replicator=6.0.5-1 \
     confluent-kafka-rest=6.0.5-1 \
     confluent-ksqldb=6.0.5-1 \
     confluent-schema-registry=6.0.5-1 \
     confluent-security=6.0.5-1 \
     confluent-control-center-fe=6.0.5-1 \
     confluent-control-center=6.0.5-1 \
     confluent-schema-registry=6.0.5-1

